<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/smiley2circle"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>


    </LinearLayout>

    <ImageButton
        android:id="@+id/moreOptionsButton"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="200dp"
        android:src="@drawable/baseline_more_horiz_18"
        android:background="@android:color/transparent"/>
</LinearLayout>


<TextView
    android:id="@+id/contentTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Post content"
    android:textSize="14sp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <ImageButton
            android:id="@+id/likeButtonCount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_thumb_up_24_blue"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/likeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="12sp"/>

        <ImageButton
            android:id="@+id/dislikeButtonCount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_thumb_down_24_blue"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/dislikeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="12sp"
            android:layout_marginStart="16dp"/>

        <ImageButton
            android:id="@+id/heartButtonCount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_favorite_24_red"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/heartCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="12sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingTop="8dp">

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_thumb_up_24"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/likeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:layout_marginRight="10dp"
        android:textSize="12sp"/>

    <ImageButton
        android:id="@+id/dislikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_thumb_down_24"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/dislikeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dislike"
        android:layout_marginRight="10dp"
        android:textSize="12sp"/>

    <ImageButton
        android:id="@+id/heartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_favorite_24"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/heartTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart"
        android:layout_marginRight="10dp"
        android:textSize="12sp"/>

    <ImageButton
        android:id="@+id/commentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/baseline_comment_24"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textSize="12sp"/>



</LinearLayout>



</LinearLayout>
